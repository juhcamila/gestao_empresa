<div class="row">
  <div class="card" style="width: 100%; margin-top: 10px;">
    <div class="card-header">
      <%= @post.assunto %>
      <%= link_to 'Voltar aos posts', posts_path, class: "float-right" %>
      <%= link_to 'Comentar', new_post_comentario_path(@post), class: "float-right", style: 'margin-right: 10px;' %>
    </div>
    <div class="card-body">
      <blockquote class="blockquote mb-0">
        <p><%= @post.descricao %></p>
        <footer class="blockquote-footer"><%= @post.user.username %> <cite title="Título da fonte"><%= date(@post.created_at)%> </cite></footer>
      </blockquote>
    </div>
  </div>
</div>
<h4 style="margin-top: 20px;">Comentários</h4>
<% @post.comentarios.each do |comentario| %>
  <div>
    <blockquote class="blockquote mb-0">
      <p><%= comentario.descricao %></p>
      <footer class="blockquote-footer"><%= comentario.user.username %> <cite title="Título da fonte"><%= date(comentario.created_at)%> </cite></footer>
    </blockquote>
  </div>
  <hr>
<% end %>

